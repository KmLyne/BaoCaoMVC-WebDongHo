@model WebDongHoMVC.Models.DonHang

@{
    ViewBag.Title = "DonHangDetails";
    Layout = "~/Areas/User/Views/Shared/_Layout.cshtml";
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
}

<h2>Chi tiết đơn hàng</h2>

<div class="order-info">
    <h3>Thông tin đơn hàng</h3>
    <p>Mã đơn hàng: @Model.MaDonHang</p>
    <p>Ngày đặt: @Model.NgayDangKy</p>
    <p>Tổng tiền: @string.Format("{0:N0} VNĐ", @Model.TongTien)</p>
    <p>Trạng thái: @Model.TrangThai</p>
</div>

<div class="product-details">
    <h3>Chi tiết sản phẩm</h3>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Hình ảnh</th>
                <th>Tên sản phẩm</th>
                <th>Số lượng</th>
                <th>Giá</th>
                <th>Tổng</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var chiTiet in Model.ChiTietDonHangs)
            {
                <tr>
                    <td>
                        <img src="~/HinhAnh/@chiTiet.SanPham.HinhAnh" alt="@chiTiet.SanPham.TenSanPham" class="product-image" />
                    </td>
                    <td>@chiTiet.SanPham.TenSanPham</td>
                    <td>@chiTiet.SoLuong</td>
                    <td>@string.Format("{0:N0} VNĐ", @chiTiet.Gia)</td>
                    <td>@string.Format("{0:N0} VNĐ", chiTiet.SoLuong * chiTiet.Gia)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* General styling for the page */
    h2 {
        color: #333;
        font-family: 'Arial', sans-serif;
        margin-bottom: 20px;
    }

    h3 {
        color: #444;
        font-family: 'Arial', sans-serif;
        margin-top: 20px;
    }

    .order-info p,
    .product-details p {
        font-size: 16px;
        color: #555;
        line-height: 1.6;
        margin: 5px 0;
    }

    /* Styling for tables */
    .table {
        width: 100%;
        max-width: 100%;
        margin-bottom: 20px;
        background-color: transparent;
    }

        .table th,
        .table td {
            padding: 12px;
            vertical-align: middle;
            border: 1px solid #dee2e6;
        }

        .table thead th {
            background-color: #343a40;
            color: #fff;
            font-weight: bold;
            text-align: center;
        }

        .table tbody td {
            text-align: center;
        }

        .table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

    .table-bordered {
        border: 1px solid #dee2e6;
    }

        .table-bordered th,
        .table-bordered td {
            border: 1px solid #dee2e6;
        }

    /* Custom button styling */
    .btn-info {
        background-color: #17a2b8;
        border: none;
        padding: 8px 16px;
        text-decoration: none;
        color: #fff;
        border-radius: 4px;
    }

        .btn-info:hover {
            background-color: #138496;
        }

    /* Styling for product images */
    .product-image {
        width: 100px;
        height: auto;
        object-fit: cover;
        border-radius: 8px;
    }
</style>
