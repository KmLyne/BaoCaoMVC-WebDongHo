@model WebDongHoMVC.ViewModel.DangNhapViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Nhập</title>

    <!-- CSS -->
    <link href="~/Css/StyleDN.css" rel="stylesheet" />

    <!-- Boxicons CSS -->
    <link href='https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css' rel='stylesheet'>
</head>
<body>
    <section class="container forms">
        <!-- Login Form -->
        <div class="form login">
            <div class="form-content">
                <header>Đăng nhập</header>
                @using (Html.BeginForm("DangNhapUser", "DangNhapUser", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="field input-field">
                        @Html.TextBoxFor(m => m.Email, new { @class = "input", placeholder = "Email", type = "email", required = "required" })
                    </div>

                    <div class="field input-field">
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "password", placeholder = "Password", required = "required" })
                        <i class='bx bx-hide eye-icon'></i>
                    </div>

                    <div class="form-link">
                        <a href="#" class="forgot-pass">Quên mật khẩu?</a>
                    </div>

                    <div class="field button-field">
                        <button type="submit">Đăng nhập</button>
                    </div>
                }

            <div class="form-link">
                <span>Bạn chưa có tài khoản? <a href="@Url.Action("DangNhapUser", "DangKyUser", new { area = "User" })" class="link signup-link">Đăng kí</a></span>
            </div>
            </div>

            <div class="line"></div>

            <div class="media-options">
                <a href="#" class="field facebook">
                    <i class='bx bxl-facebook facebook-icon'></i>
                    <span>Đăng nhập Facebook</span>
                </a>
            </div>

            <div class="media-options">
                <a href="#" class="field google">
                    <img src="~/HinhAnh/google.png" alt="" class="google-img">
                    <span>Đăng nhập với Google</span>
                </a>
            </div>
        </div>
    </section>

    <!-- JavaScript -->
    <script src="~/js/script.js"></script>
</body>
</html>
