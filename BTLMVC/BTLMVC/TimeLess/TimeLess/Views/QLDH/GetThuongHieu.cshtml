@using TimeLess.Models
@model List<SanPham>
@{
    ViewBag.Title = "GetThuongHieu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GetThuongHieu</h2>

<div>
    @if (Model != null)
    {
        foreach (var item in Model)
        {
            <div style="width:250px; float:left; border: 1px solid gray; height:300px; margin: 17px 6px 3px 17px">
                <div style="height:65%">
                    <img src="~/Image/Image_dongho/@item.Anh" height="180" style="margin-top:5px" />
                </div>
                <div style="height:25%">Tên: @item.TenSP</div>
                <div style="height:10%;border: 1px solid gray; color:blue">
                    Giá bán:<strong style="color:#6f0909">
                    </strong>
                </div>
            </div>
        }
    }

</div>

