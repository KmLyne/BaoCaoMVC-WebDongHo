    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body style="margin: 0; padding: 0; height: 100vh; overflow: hidden;">
    <div class="container">
        <div class="row d-flex align-items-center">
            <div class="col-md-auto col-lg-auto col-sm-12 col-xs-12">
                <img src="~/Image/logo0.png" height="130" style="float: left; margin-right: 20px;" />
            </div>
            <div class="col-md col-lg col-sm-12 col-xs-12">
                <div style="font-size: 3.3em; font-family: 'Noto Serif', serif; color: #0000FF; text-shadow: 2px 2px 8px #0000FF;">CỬA HÀNG ĐỒNG HỒ TIMELESS</div>
